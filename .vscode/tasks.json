{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build active C file",
      "type": "shell",
      "command": "gcc",
      "args": [
        "-g",
        "-Wall",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$gcc",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    }
  ]
}
